{% extends 'base.html.twig' %}

{% block title %}Inscription d'un nouvel utilisateur{% endblock %}

{% block page_content %}
<section class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-center mb-6">Inscription d'un nouvel utilisateur</h1>
    {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}
        <div class="mb-4">
            {{ form_row(registrationForm.email, {'attr': {'class': 'input', 'placeholder': 'Email'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.firstname, {'attr': {'class': 'input', 'placeholder': 'Pr√©nom'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.lastname, {'attr': {'class': 'input', 'placeholder': 'Nom de famille'}}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.plainPassword.first, {'attr': {'class': 'input', 'placeholder': 'Mot de passe'}, 'label': 'Mot de passe'}) }}
        </div>
        <div class="mb-4">
            {{ form_row(registrationForm.plainPassword.second, {'attr': {'class': 'input', 'placeholder': 'Confirmez le mot de passe'}, 'label': 'Confirmez le mot de passe'}) }}
        </div>
        <button type="submit" class="w-full px-4 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition ease-in-out duration-150">
            Enregistrer l'utilisateur
        </button>
    {{ form_end(registrationForm) }}
</section>
{% endblock %}
