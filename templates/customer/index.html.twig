{% extends 'base.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block body %}
    <h1>Liste des clients</h1>
    {% if customers %}
        <table>
            <thead>
                <tr>
                    <th>NOM DU CLIENT</th>
                    <th>EMAIL</th>
                    <th>MODIFIER</th>
                </tr>
            </thead>
            <tbody>
        {% for customer in customers %}
                <tr class="mb-4">
                    <td>
                        <h2>
                            <a href="{{ path('customer_show', {'id': customer.id}) }}" >
                                {{ customer.name }}
                            </a>
                        </h2>
                    </td>
                    <td>{{ customer.email }}</td>
                    <td>
                        <a href="{{ path('customer_update', {'id': customer.id}) }}" class="btn btn-primary">Modifier</a> <br>
                    </td>
                    {# <a href="{{ path('customer_delete', {'id': customer.id, 'token': csrf_token('delete' ~ customer.id)}) }}" class="btn btn-primary" onclick="confirm('Sur sur ?');">Suppression</a> <br> #}
                </tr>
        {% endfor %}
            </tbody>
        </table>
    {% else %}
        Aucun client
    {% endif %}
    <a href="{{ path('customer_new') }}" class="btn btn-primary">Ajouter un client</a>
{% endblock %}
