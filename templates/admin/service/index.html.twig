{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block page_content %}
    <h1>Service index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>Description</th>
                <th>Price</th>
                <th>Created</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.label }}</td>
                <td>{{ service.description }}</td>
                <td>{{ service.price }}</td>
                <td>{{ service.created ? service.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_service_show', {'id': service.id}) }}">show</a>
                    <a href="{{ path('admin_service_edit', {'id': service.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_service_new') }}">Create new</a>
{% endblock %}
