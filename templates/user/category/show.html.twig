{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block page_content %}
    <h1>Category</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ category.label }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ category.created ? category.created|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_app_category_index') }}">back to list</a>

    <a href="{{ path('user_app_category_edit', {'id': category.id}) }}">edit</a>

    {{ include('user/category/_delete_form.html.twig') }}
{% endblock %}
