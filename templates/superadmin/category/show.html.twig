{% extends 'superadmin/default/sheet.html.twig' %}

{% block page_title %}Fiche catégorie de prestation - ArtBill{% endblock %}

{% block page_header %}
    <p class="text-2xl font-bold">Fiche catégorie de prestation</p>
    <div class="flex justify-end gap-3 text-sm">
        <a href="{{ path('superadmin_category_edit', {'id': category.id}) }}">
            <div class="h-9 flex justify-center items-center gap-1.5 border shadow-sm rounded-md p-3 bg-primary text-white">
                <icon name="pencil" display="solid" color="white" size="4"></icon>
                <span>Modifier</span>
            </div>
        </a>
        <div class="h-9 flex justify-center items-center gap-1.5 border shadow-sm rounded-md p-3 bg-red-500 text-white">
            {{ include('superadmin/category/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}

{% block sheet %}
    <p class="text-lg font-bold mb-1">Informations</p>

    <div class="w-full flex">
        <div class="w-1/4 text-xs text-gray-500">
            Libellé
        </div>
        <div class="flex-1">
            {{ category.label }}
        </div>
    </div>

    <div class="w-full flex">
        <div class="w-1/4 text-xs text-gray-500">
            Entreprise
        </div>
        <div class="flex-1">
            {{ category.company.name ?? "" }}
        </div>
    </div>

    <div class="w-full flex">
        <div class="w-1/4 text-xs text-gray-500">
            Date et heure de création
        </div>
        <div class="flex-1">
            {{ category.createdAt|date('d/m/Y à H') }}h{{ category.createdAt|date('i') }}
        </div>
    </div>
{% endblock %}
