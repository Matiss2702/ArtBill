{% extends 'base.html.twig' %}

{% block title %}Invoice index{% endblock %}

{% block body %}
    <h1>Invoice index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Amount_ht</th>
                <th>Amount_ttc</th>
                <th>Quantity</th>
                <th>Status</th>
                <th>Due_date</th>
                <th>Created</th>
                <th>Vat_rates</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for invoice in invoices %}
            <tr>
                <td>{{ invoice.id }}</td>
                <td>{{ invoice.description }}</td>
                <td>{{ invoice.amountHt }}</td>
                <td>{{ invoice.amountTtc }}</td>
                <td>{{ invoice.quantity }}</td>
                <td>{{ invoice.status }}</td>
                <td>{{ invoice.dueDate ? invoice.dueDate|date('Y-m-d') : '' }}</td>
                <td>{{ invoice.created ? invoice.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ invoice.vatRates ? invoice.vatRates|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('app_invoice_show', {'id': invoice.id}) }}">show</a>
                    <a href="{{ path('app_invoice_edit', {'id': invoice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_invoice_new') }}">Create new</a>
{% endblock %}
